{
   "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "outDir": "./dist/",
      "types": ["vite/client"],
      "baseUrl": "./",
      "paths": {
         "@/*": ["src/*"]
      }
   },
   "allowJs": true,
   "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
