{
  "name": "component-library",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/types/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/main.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "build:lib": "vue-tsc -p tsconfig.lib.json && vite build",
    "preview": "vite preview --port 3001",
    "lint:js": "eslint --fix",
    "lint:style": "stylelint \"**/*.{css,scss,html,vue}\" --ignore-path .gitignore --fix",
    "lint": "yarn lint:js && yarn lint:style",
    "test": "vitest",
    "watch": "storybook dev -p 6006",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-dictionary": "style-dictionary build --config ./style-dictionary/config.json",
    "prepare": "husky"
  },
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@chromatic-com/storybook": "^3",
    "@eslint/js": "^9.20.0",
    "@storybook/addon-actions": "^8.5.3",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-links": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@storybook/vue3": "^8.5.3",
    "@storybook/vue3-vite": "^8.5.3",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "@volar/typescript": "^2.4.11",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "babel-loader": "^8.3.0",
    "eslint": "^9.20.1",
    "eslint-plugin-vue": "^9.32.0",
    "glob": "^11.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.1",
    "sass": "^1.85.0",
    "storybook": "^8.5.6",
    "style-dictionary": "^4.3.3",
    "stylelint": "^16.14.1",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.11.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-lib-inject-css": "^2.2.1",
    "vitest": "^3.0.5",
    "vue-loader": "^17.4.2",
    "vue-tsc": "^2.2.2"
  }
}
